<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ListPickerDialogBase -->

    <style name="ListPickerDialogBase" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">98%</item>
        <item name="android:windowMinWidthMinor">98%</item>
    </style>

    <!-- layout / picker_dialog & picker_dialog_item -->

    <style name="text_view_auto_scroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

</resources>
